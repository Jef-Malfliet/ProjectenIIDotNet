@model G19.Models.ViewModels.LidViewModel

@{
    ViewData["Title"] = "Lid aanpassen";
}
<link href="~/css/WijzigenGegevens.css" rel="stylesheet" />

<div class="col-md-4 wijziglidform">
    <form method="post">
        <div asp-validation-summary="All" class="allErrors"></div>
        <div class="form-group">
            <label asp-for="Voornaam" class="formLabel"></label>
            <input asp-for="Voornaam" class="form-control formControl" />
            <span asp-validation-for="Voornaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Achternaam" class="formLabel"></label>
            <input asp-for="Achternaam" class="form-control formControl" />
            <span asp-validation-for="Achternaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="formLabel">Emailadres</label>
            <input asp-for="Email" class="form-control formControl" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailOuders" class="formLabel">Emailadres ouders</label>
            <input asp-for="EmailOuders" class="form-control formControl" />
            <span asp-validation-for="EmailOuders" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GSM" class="formLabel">Gsmnummer</label>
            <input asp-for="GSM" class="form-control formControl" />
            <span asp-validation-for="GSM" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefoon" class="formLabel"></label>
            <input asp-for="Telefoon" class="form-control formControl" />
            <span asp-validation-for="Telefoon" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GeboorteDatum" class="formLabel">Geboortedatum</label>
            <input asp-for="GeboorteDatum" class="form-control formControl" />
            <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Geslacht" class="formLabel"></label>
            <input asp-for="Geslacht" class="form-control formControl" />
            <span asp-validation-for="Geslacht" class="text-danger"></span>
        </div>

        <label asp-for="Rijksregisternummer1" class="formLabel">Rijksregisternummer</label>

        <div class="rijksregDiv">
            <div class="form-group rijksreg">
                <input asp-for="Rijksregisternummer1" class="form-control formControl" />
            </div>
            .
            <div class="form-group rijksreg">
                <input asp-for="Rijksregisternummer2" class="form-control formControl" />
            </div>
            .
            <div class="form-group rijksreg">
                <input asp-for="Rijksregisternummer3" class="form-control formControl" />
            </div>
            -
            <div class="form-group rijksreg">
                <input asp-for="Rijksregisternummer4" class="form-control formControl" />
            </div>
            .
            <div class="form-group rijksreg">
                <input asp-for="Rijksregisternummer5" class="form-control formControl" />
            </div>
        </div>
        <span asp-validation-for="Rijksregisternummer1" class="text-danger"></span>
        <span asp-validation-for="Rijksregisternummer2" class="text-danger"></span>
        <span asp-validation-for="Rijksregisternummer3" class="text-danger"></span>
        <span asp-validation-for="Rijksregisternummer4" class="text-danger"></span>
        <span asp-validation-for="Rijksregisternummer5" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="StraatNaam" class="formLabel">Straatnaam</label>
            <input asp-for="StraatNaam" class="form-control formControl" />
            <span asp-validation-for="StraatNaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Huisnummer" class="formLabel"></label>
            <input asp-for="Huisnummer" class="form-control formControl" />
            <span asp-validation-for="Huisnummer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Busnummer" class="formLabel"></label>
            <input asp-for="Busnummer" class="form-control formControl" />
            <span asp-validation-for="Busnummer" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stad" class="formLabel"></label>
            <input asp-for="Stad" class="form-control formControl" />
            <span asp-validation-for="Stad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Postcode" class="formLabel"></label>
            <input asp-for="Postcode" class="form-control formControl" />
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Land" class="formLabel"></label>
            <select asp-for="Land" asp-items="Html.GetEnumSelectList<LandEnum>()" class="form-control formControl">
                <option value="" class="formControl">-- selecteer Formule --</option>
            </select>
            <span asp-validation-for="Land" class="text-danger"></span>
        </div>

        <div>
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" asp-controller="Session" class="btn btn-warning cancelBtn">Cancel</a>
        </div>
    </form>
</div>

@section scripts {
    <script asp-src-include="lib/jquery-validation/dist/jquery.validate.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}