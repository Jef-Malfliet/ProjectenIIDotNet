@model G19.Models.Oefening

@{
    ViewData["Title"] = "_Comments";
}

<h2>Plaats Commentaar:</h2>

<div class="nieuweCommentaar">
    <form asp-controller="Oefening" asp-action="geefCommentaar" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Comments"></label>
            <input asp-for="Comments" value="" class="form-control" type="text" />
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default submitButton">Submit</button>
    </form>
</div>

<div class="commentaren">
    @foreach (var comments in @Model.Comments) {
        <div class="card cardcomment">
            <span class="comment">@comments.Comments</span>
        </div>
    }
</div>

